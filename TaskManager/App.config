<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  
  <appSettings>
    <add key="TaskStorageFile" value="tasks.xml" />
    <add key="MaxTasksPerUser" value="100" />
    <add key="AutoSaveEnabled" value="true" />
  </appSettings>
  
  <connectionStrings>
    <!-- Example connection string for future database integration -->
    <add name="TaskDatabase" 
         connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=TaskManagerDB;Integrated Security=True" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>
